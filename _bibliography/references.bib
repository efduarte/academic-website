@inproceedings{duarte2018revisiting,
    author = {Duarte, Emanuel Felipe
        and Baranauskas, M. Cec\'{\i}lia C.},
    title = {Revisiting Interactive Art from an Interaction Design Perspective: Opening a Research Agenda},
