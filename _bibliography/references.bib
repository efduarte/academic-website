@article{baranauskas2023socioenactive,
    author = {Baranauskas, M. Cecilia C.
        and Duarte, Emanuel Felipe
        and Valente, José A.},
    title = {Socioenactive Interaction: Addressing Intersubjectivity in Ubiquitous Design Scenarios},
    journal = {International Journal of Human–Computer Interaction},
    volume = {0},
    number = {0},
    pages = {1-16},
    year = {2023},
    publisher = {Taylor & Francis},
    doi = {10.1080/10447318.2023.2188536},
    URL = {https://doi.org/10.1080/10447318.2023.2188536},
    eprint = {https://doi.org/10.1080/10447318.2023.2188536},
    abstract = {People’s interaction with computers has been explained through several theories and methods throughout the history of computers and their uses; more complex scenarios of ubiquitous and pervasive computing experimented nowadays invite other ways of considering human-technology interaction. The enactive approach to cognition, centered in human experience in the environment, has shown itself as a possibility to understand interaction in these new scenarios. In this paper we present a view of interaction, named socioenactive, to explain our relation with contemporary computational technologies in scenarios of ubiquitous and pervasive systems, understood from the enactivist perspective. After presenting core concepts related to intersubjectivity that helped to build up what we mean by socioenactive interaction, we illustrate it with some scenarios of ubiquitous and pervasive technology (situated in a school, a museum and a hospital), designed for the study of the phenomena of interaction. Graspable aspects of intersubjectivity are raised in the considered scenarios and affordances for the socioenactive interaction are illustrated. Implications of the study are discussed leading to aspects to consider in a research agenda in the field.}
}

@article{duarte2022experience,
    author = {Duarte, Emanuel Felipe
        and Baranauskas, M. Cecília C.},
    title = {Experience-Based Constructionism as a Basis for HCI Education: A Case Study},
    journal = {International Journal of Human–Computer Interaction},
    volume = {0},
    number = {0},
    pages = {1-21},
    year = {2022},
    publisher = {Taylor & Francis},
    doi = {10.1080/10447318.2022.2121783},
    URL = {https://doi.org/10.1080/10447318.2022.2121783},
    eprint = {https://doi.org/10.1080/10447318.2022.2121783},
    abstract = {As new technologies constantly change what we understand as a computer, Human–Computer Interaction (HCI) educators need to stay updated and prepare their students to work with an ever-growing number of socio-technical situations. This phenomenon constitutes a challenge for HCI syllabuses and practices, demanding diversified approaches to HCI education. In this article, we articulate Papert’s constructionism with Dewey’s theory of experience to propose an experience-based constructionism approach to practices in HCI education. We illustrate our approach in a case study with 55 computing undergraduate students engaged in the design and construction of open-ended, physical interactive artworks. Nine interactive artifacts were created. The students have shown an effective experience with our approach, reporting an expanded view of HCI, and demonstrating competence in appropriating new methods and instruments, suggesting the effectiveness of our approach to HCI education. Results of this work may encourage other HCI educators and practitioners to experience the proposed approach in their specific contexts.}
}

@article{pimenta2022ubiaccess,
    author = {Pimenta, Josiane Rosa de Oliveira Gaia
        and Duarte, Emanuel Felipe
        and Baranauskas, M. Cecília C.
        and Medeiros, Claudia Bauzer},
    title = "{UbiAccess: an Instrument to Assess System Access in Ubiquitous Scenarios}",
    journal = {Interacting with Computers},
    volume = {35},
    number = {2},
    pages = {55-68},
    year = {2022},
    month = {10},
    abstract = "{Ubiquitous computing has brought new challenges for the design of scenarios for people–technology interactions. Despite considerable research on formal accessibility standards, related work has hardly investigated them in ubiquitous computing contexts. In this work, we investigate means of analyzing accessibility aspects in ubiquitous environments based on two standard instruments: the Universal Design (UD) Principles and Guidelines and the W3C-WCAG (Web Content Accessibility Guidelines of the World Wide Web Consortium). Both instruments were applied to the context of socioenactive ubiquitous environments, providing insights into their applicability and shortcomings. As a result of this analysis we constructed UbiAccess, an instrument to evaluate access in ubiquitous scenarios, which combines and extends characteristics of both UD and W3C-WCAG, filling in some of the gaps we identified. The application of UbiAccess to a case study shows the advantages of its use in informing the evaluation of access in ubiquitous scenarios.}",
    issn = {1873-7951},
    doi = {10.1093/iwc/iwac029},
    url = {https://doi.org/10.1093/iwc/iwac029},
    eprint = {https://academic.oup.com/iwc/article-pdf/35/2/55/51667440/iwac029.pdf},
}

@article{mendoza2023evaluation,
    author={Mendoza, Yusseli Lizeth M{\'e}ndez
        and Duarte, Emanuel Felipe
        and de Queiroz, Maria J{\^e}sca Nobre
        and Baranauskas, M. Cec{\'i}lia C.},
    title={Evaluation in scenarios of ubiquity of technology: a systematic literature review on interactive installations},
    journal={Personal and Ubiquitous Computing},
    year={2023},
    month={Apr},
    day={01},
    volume={27},
    number={2},
    pages={343-361},
    abstract={Literature in the field of human--computer interaction (HCI) has shown a long tradition of evaluation methods for and along with interactive systems design. We have experienced in the last years an impressive development in ubiquitous and pervasive systems, motivated by technological development, low cost of sensors and actuators, and a rise in the maker culture for the construction of computational systems. While such systems naturally inherit methods for evaluating the user interaction from previous interaction paradigms, it is not clear whether they reach specificities of the interaction of people within ubiquitous and pervasive systems scenarios. This work aimed at shedding light on this subject by conducting a systematic literature review on ubiquitous and pervasive technology scenarios of interactive installations. Results have shown that most of the selected contributions use classical methods of data collection and analysis, and combinations of these methods. Analysis of results also points out some new aspects to be considered in evaluation methods, regarding the human (social) actions promoted or afforded by ubiquitous and pervasive systems.},
    issn={1617-4917},
    doi={10.1007/s00779-022-01696-8},
    url={https://doi.org/10.1007/s00779-022-01696-8}
}

@article{baranauskas2021designing,
    title = {Designing for a socioenactive experience: A case study in an educational workshop on deep time},
    journal = {International Journal of Child-Computer Interaction},
    volume = {29},
    pages = {100287},
    year = {2021},
    issn = {2212-8689},
    doi = {10.1016/j.ijcci.2021.100287},
    url = {https://www.sciencedirect.com/science/article/pii/S2212868921000258},
    author = {Baranauskas, M. Cecília C.
        and  Mendoza, Yusseli Lizeth Méndez
        and Duarte, Emanuel Felipe},
    keywords = {Socioenactive Experience, Ubiquitous computing, Exploratory museum, Interaction design and children},
    abstract = {The new scenarios brought by ubiquitous and pervasive technologies have drawn attention to design considerations towards integrating physical artefacts and digital processes. As for the human element in these scenarios, literature has emphasized individual bodies sensed by or acting with technology as social parties who participate in the environment. In this work, we draw on the enactivism-inspired perspective to cognition, to make explicit the social–physical–digital tripartite articulation into design considerations. The article proposes to clarify the tripartite coupling in the concept we are naming ‘socioenactive’. A case study carried out in the context of an educational workshop in an exploratory museum, with the use of installations designed on the deep time theme, illustrates some aspects of this tripartite relation. Data from the evaluation of the experience by children participating in the workshop, and from observations of intersubjective aspects of the experience made from recorded video, are presented and discussed. Results of the study clarify the main ideas behind an experience we are naming socioenactive, in its intersubjective aspects, and suggest lines to be weaved in design towards (smart) contemporary technology-based environments.}
}

@article{duarte2019the,
    place={Porto Alegre, RS},
    title={The Interface between Interactive Art and Human-Computer Interaction: Exploring Dialogue Genres and Evaluative Practices},
    volume={10},
    url={https://sol.sbc.org.br/journals/index.php/jis/article/view/551},
    doi={10.5753/jis.2019.551},
    abstract={The mutual efforts of joining art and science have been an important source of innovation in many fields throughout history. In this article, we investigate the relatively common origins, differences, and similarities between the Interactive Art and Human-Computer Interaction (HCI) areas of knowledge. We also investigate what kind of human-computer interactions are sought by artists or emerge in Interactive Art examples, as well as what kind of frameworks, evaluation criteria or methodologies are reported in the literature to support the design and evaluation of Interactive Art. As a result of our analysis of Interactive Art examples found in the literature and beyond, we derived four genres of dialogue that emerge naturally or are stressed by authors: visual, embodied, tangible and social. These genres, albeit not comprehensive, can inspire the design of novel forms of interaction in computational systems with or without artistic intent. Moreover, frameworks, evaluation criteria, and methodologies may allow a cross-pollination between Interactive Art and HCI. While interactive artists may provide novel ways to look at the design and evaluation of interactive systems, these artists may also benefit from appropriating traditional HCI methods, tools, and technologies for new purposes. Lastly, we draw on our findings and learned lessons to outline a research agenda with the main objectives of 1) encouraging Interactive Art research, 2) studying Interactive Art examples, 3) practicing Interactive Art design and evaluation, and 4) designing Interactive Art for all.},
    number={2},
    journal={Journal on Interactive Systems},
    author={Duarte, Emanuel Felipe
        and Merkle, Luiz Ernesto
        and Baranauskas, M. Cecília C.},
    year={2019},
    month={Dec.},
    pages={20–34}
}

